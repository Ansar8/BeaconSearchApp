<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actor_image_container"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ble_device_mac_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/beacon_property_tv_margin"
            android:textSize="@dimen/beacon_property_tv_size"
            tools:text="MAC: 00:11:22:AA:BB:CC" />

        <TextView
            android:id="@+id/ble_device_rssi_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/beacon_property_tv_margin"
            android:textSize="@dimen/beacon_property_tv_size"
            tools:text="RSSI: 123" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
